                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "sku": {
                        "type": "string"
                      },
                      "price": {
                        "type": "number"
                      },
                      "stockQuantity": {
                        "type": "integer"
                      },
                      "reorderLevel": {
                        "type": "integer"
                      },
                      "isLowStock": {
                        "type": "boolean"
                      }
                    },
                    "required": [
                      "id",
                      "name",
                      "description",
                      "sku",
                      "price",
                      "stockQuantity",
                      "reorderLevel",
                      "isLowStock"
